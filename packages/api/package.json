{
  "name": "@work-link/api",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "generate:types:watch": "bun src/scripts/generate-types.ts --watch",
    "dev": "bun run generate:types:watch & bunx --bun tsdown --watch"
  },
  "devDependencies": {
    "tsdown": "^0.15.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@orpc/client": "^1.10.3",
    "@orpc/openapi": "^1.10.3",
    "@orpc/server": "^1.10.3",
    "@orpc/zod": "^1.10.3",
    "@work-link/auth": "workspace:*",
    "@work-link/db": "workspace:*",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.3",
    "hono": "^4.10.4",
    "zod": "^4.1.12"
  }
}
