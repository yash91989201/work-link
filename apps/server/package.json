{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "update": "bun update --latest",
    "supabase:start": "bunx supabase start",
    "supabase:stop": "bunx supabase stop",
    "watch:types": "bun run ./src/scripts/generate-types.ts --watch"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.18",
    "@orpc/client": "^1.9.1",
    "@orpc/openapi": "^1.9.1",
    "@orpc/server": "^1.9.1",
    "@orpc/zod": "^1.9.1",
    "@supabase/supabase-js": "^2.58.0",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.3.18",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.9",
    "postgres": "^3.4.7",
    "resend": "^6.1.0",
    "zod": "^4.1.11"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/pg": "^8.15.5",
    "chokidar": "^4.0.3",
    "drizzle-kit": "^0.31.5",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2",
    "transactional": "workspace:*"
  }
}
