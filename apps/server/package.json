{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "update": "bun update --latest",
    "supabase:start": "bux supabase start",
    "supabase:stop": "bux supabase stop"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.10",
    "@orpc/client": "^1.8.6",
    "@orpc/openapi": "^1.8.6",
    "@orpc/server": "^1.8.6",
    "@orpc/zod": "^1.8.6",
    "@supabase/supabase-js": "^2.57.4",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.3.10",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "postgres": "^3.4.7",
    "zod": "^4.0.2"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "tsdown": "^0.15.1",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11"
  }
}
