{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "update": "bun update --latest",
    "supabase:start": "bux supabase start",
    "supabase:stop": "bunx supabase stop"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.11",
    "@orpc/client": "^1.8.9",
    "@orpc/openapi": "^1.8.9",
    "@orpc/server": "^1.8.9",
    "@orpc/zod": "^1.8.9",
    "@supabase/supabase-js": "^2.57.4",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.3.11",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.7",
    "postgres": "^3.4.7",
    "zod": "^4.1.8"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "tsdown": "^0.15.2",
    "typescript": "^5.9.2",
    "@types/bun": "^1.2.22",
    "drizzle-kit": "^0.31.4",
    "@types/pg": "^8.15.5"
  }
}
