{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@server/lib/*": ["../server/src/lib/*"],
      "@server/router": ["../server/src/routers/index.ts"]
    }
  },
  "references": [
    {
      "path": "../server"
    }
  ]
}
